<%# This section is to edit the form %>
<h2>Edit Workout</h2>
<form action="/workouts/<%= workout._id %>/edit" method="POST">
  <div>
    <label>Workout Name</label>
    <input type="text" name="exercise" value="<%= workout.exercise %>" required>
  </div>
  <div>
    <label>Reps</label>
    <input type="number" name="reps" value="<%= workout.reps %>">
  </div>
  <div>
    <label>Weight</label>
    <input type="number" name="weight" value="<%= workout.weight %>">
  </div>
  <button type="submit">Update Workout</button>
</form>

<%# Links it back to the workout page %>
<a href="/workouts">Back to Workout List</a>
